<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_item_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/shape_white_card">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yyyy年MM月dd日 HH:mm:ss"
            android:textColor="@color/Line"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_collection"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/collection" />

        <TextView
            android:id="@+id/tv_type_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time"
            android:layout_marginTop="10dp"
            android:text="账单类别："
            android:textColor="@color/Baffle"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_time"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_type_title"
            android:textColor="@color/Baffle"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_ps"
            android:layout_alignParentRight="true"
            android:text="88.88"
            android:textColor="@color/App_Color"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_ps"
            android:layout_toLeftOf="@id/tv_number"
            android:text="￥"
            android:textColor="@color/App_Color"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_ps_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_type_title"
            android:layout_marginTop="10dp"
            android:text="备注："
            android:textColor="@color/Baffle"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_ps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_type_title"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/tv_unit"
            android:layout_toRightOf="@id/tv_ps_title"
            android:textColor="@color/Baffle"
            android:textSize="15dp" />

    </RelativeLayout>


</RelativeLayout>